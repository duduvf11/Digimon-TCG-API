generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
    id String @default(uuid())
    user String @id
    password String
    posts Post[]

    @@map("users")
}

model Post{
    id String @default(uuid()) @id
    name String
    description String?
    userName String
    user User @relation(fields: [userName], references: [user])

    @@map("posts")

}